---
import { getCollection } from 'astro:content';
import ContentLayout from '../../layouts/ContentLayout.astro';
import { getBacklinksForEntry } from '../../lib/wiki';
import { titleFromSlug } from '../../lib/content';

export async function getStaticPaths() {
  const entries = await getCollection('attractors');
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry }
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const allLogs = await getCollection('logs');
const logs = allLogs
  .filter((log) => log.data.parent === entry.slug)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
const backlinks = await getBacklinksForEntry('attractors', entry.slug);
const title = entry.data.title ?? titleFromSlug(entry.slug);

const formatDate = (date) =>
  new Intl.DateTimeFormat('en-US', { dateStyle: 'medium' }).format(date);
---

<ContentLayout
  title={title}
  description={entry.data.description}
  date={entry.data.date}
  kind={entry.data.kind}
  backlinks={backlinks}
>
  <Content />

  <section class="section">
    <h2>Trajectory / Logs</h2>
    {logs.length === 0 ? (
      <p class="meta">No logs yet.</p>
    ) : (
      <ul class="list">
        {logs.map((log) => (
          <li>
            <a href={`/logs/${log.slug}`}>{log.data.title ?? log.data.day ?? formatDate(log.data.date)}</a>
          </li>
        ))}
      </ul>
    )}
  </section>
</ContentLayout>
