---
import { getCollection } from 'astro:content';
import ContentLayout from '../../layouts/ContentLayout.astro';
import { getBacklinksForEntry } from '../../lib/wiki';
import { titleFromSlug } from '../../lib/content';

export async function getStaticPaths() {
  const entries = await getCollection('attractors');
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry }
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const allLogs = await getCollection('logs');
const logs = allLogs
  .filter((log) => log.data.parent === entry.slug)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
const backlinks = await getBacklinksForEntry('attractors', entry.slug);
const title = entry.data.title ?? titleFromSlug(entry.slug);
const lastUpdated = entry.data.lastmod ?? entry.data.date ?? null;

const formatDate = (date) =>
  new Intl.DateTimeFormat('en-US', { dateStyle: 'medium' }).format(date);
const subtype = entry.data.kind
  ? entry.data.kind[0].toUpperCase() + entry.data.kind.slice(1)
  : 'Essay';
---

<ContentLayout
  title={title}
  description={entry.data.description}
  date={entry.data.date}
  typeLabel="Attractor"
  subtype={subtype}
  typeIcon="/terrain/icons/attractor.png"
  typeKey="attractor"
  lastUpdated={lastUpdated}
  backlinks={backlinks}
>
  <Content />

</ContentLayout>
