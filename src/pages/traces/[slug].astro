---
import { getCollection } from 'astro:content';
import ContentLayout from '../../layouts/ContentLayout.astro';
import { getBacklinksForEntry } from '../../lib/wiki';
import { titleFromSlug } from '../../lib/content';

export async function getStaticPaths() {
  const entries = await getCollection('traces');
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry }
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const backlinks = await getBacklinksForEntry('traces', entry.slug);
const title = entry.data.title ?? titleFromSlug(entry.slug);
const lastUpdated = entry.data.lastmod ?? entry.data.date ?? null;
---

<ContentLayout
  title={title}
  description={entry.data.description}
  date={entry.data.date}
  typeLabel="Trace"
  subtype="Note"
  typeIcon="/terrain/icons/trace.png"
  typeKey="trace"
  lastUpdated={lastUpdated}
  backlinks={backlinks}
>
  <Content />
</ContentLayout>
